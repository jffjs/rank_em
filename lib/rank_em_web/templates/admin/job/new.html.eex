<h1>New ad-hoc Job</h1>

<%= form_for @changeset, Routes.job_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div>
    <%= label f, :scraper, "Scraper" %>
    <%= select f, :scraper, scraper_options() %>
  </div>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
